<div class="fc-feature-card">
  <div class="fc-feature-icon">
    {% if icon != blank %}
      <img 
        src="{{ icon | handle | append: '.svg' | asset_url }}" 
        alt="{{ title }}"
        width="50" 
        height="50"
      >
    {% else %}
      <img 
        src="{{ 'image.svg' | asset_url }}" 
        alt="{{ title }}"
        width="50" 
        height="50"
      >
    {% endif %}
  </div>
  <h3 class="fc-title">{{ title }}</h3>
  <p class="fc-description">{{ description }}</p>
</div>

<style>
  .fc-feature-card {
    padding: 20px;
    border: 1px solid #e1e1e1;
    border-radius: 8px;
    text-align: center;
  }
  .fc-feature-icon img {
    width: 50px;
    height: 50px;
  }
  .fc-title {
    margin: 15px 0 10px;
  }
  .fc-description {
    margin: 0;
    color: #666;
  }
</style>