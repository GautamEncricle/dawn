<div class="feature-card">
  <div class="feature-icon">
    {% if icon != blank %}
      <img 
        src="{{ icon | handle | append: '.svg' | asset_url }}" 
        alt="{{ title }}"
        width="50" 
        height="50"
      >
    {% else %}
      <img 
        src="{{ 'image.svg' | asset_url }}" 
        alt="{{ title }}"
        width="50" 
        height="50"
      >
    {% endif %}
  </div>
  <h3>{{ title }}</h3>
  <p>{{ description }}</p>
</div>

<style>
  .feature-card {
    padding: 20px;
    border: 1px solid #e1e1e1;
    border-radius: 8px;
    text-align: center;
  }
  .feature-icon img {
    width: 50px;
    height: 50px;
  }
</style>