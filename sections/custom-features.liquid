<div class="feature-grid">
  {% for block in section.blocks %}
    {% if block.type == 'feature' %}
      {% render 'feature-card',
        icon: block.settings.icon,
        title: block.settings.heading,
        description: block.settings.description
      %}
    {% endif %}
  {% endfor %}
</div>
{% schema %}
{
  "name": "Custom feature",
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon(e.g.,'Truck')"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "New arrivals"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Get your order delivered in 2-3 days"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Feature",
      "category": "Custom section",
      "blocks": [{ "type": "feature" }, { "type": "feature" }, { "type": "feature" }]
    }
  ]
}
{% endschema %}
