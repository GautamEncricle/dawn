<div class="feature-grid">
  {% for block in section.blocks %}
  {% when 'feature' %}
    {% render 'feature-card',
      icon: block.settings.icon,
      title: block.settings.title,
      description: block.settings.description
    %}
  {% endfor %}
</div>
{% schema %}
{
  "name": "Custom feature",
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon(e.g.,'Truck')"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "New arrivals"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Get your order delivered in 2-3 days"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Feature",
      "category": "Custom section",
      "blocks": [{ "type": "feature" }, { "type": "feature" }, { "type": "feature" }]
    }
  ]
}
{% endschema %}
