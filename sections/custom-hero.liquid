<div class="hero" style="Background:{{ section.settings.bg_color }}">
  <h1>{{ section.settings.heading }}</h1>
  <p>{{ section.settings.sub_heading }}</p>
  <a href="{{ section.settings.button_url }}" class="button">
    {{ section.settings.button_text }}
  </a>
</div>

{% schema %}
{
  "name": "Custom Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our store"
    },
    {
      "type": "text",
      "id": "sub_heading",
      "label": "sub heading",
      "default": "Discover amazing products"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#f4f4f4"
    }
  ],
  "presets": [
    {
      "name": "Custom Hero"
    }
  ]
}
{% endschema %}
