{% assign tag = section.settings.heading_level %}
{% assign description = section.settings.description %}
{% assign collection_handle = section.settings.collection %}
{% assign selected_collection = collections[collection_handle] %}
{% assign selected_title = section.settings.title %}

<{{ tag }} class="pcd-title-section">
  {% if selected_collection == blank %}
    {% assign selected_collection = collections['new-arrival'] %}
  {% elsif selected_title != blank %}
    {{ selected_title }}
  {% else %}
    {{ selected_collection.title }}
  {% endif %}
</{{ tag }}>

<section class="pcd-description-section">
  <main>
    <p class="pcd-description">{{ description }}</p>
  </main>
</section>

<section class="pcd-product-section">
  {% assign selected_collection = collections[section.settings.collection] %}
  {% if selected_collection == blank %}
    {% assign selected_collection = collections['new-arrival'] %}
  {% endif %}

  <div class="pcd-product-grid">
    {% for product in selected_collection.products limit: section.settings.product_limit %}
      {% render 'product-card', product: product, button_type: section.settings.button_type %}
    {% else %}
      <p class="pcd-empty">No products found in this collection.</p>
    {% endfor %}
  </div>
</section>

{% stylesheet %}
  .pcd-title-section {
    padding: 2rem;
    text-align: center;
    background-color: #f9f9f9;
    border-bottom: 1px solid #eee;
  }
  .pcd-description-section {
    padding: 2em;
    margin: 0 auto;
    line-height: 1.6;
    max-width: 800px;
    font-size: large;
  }
  .pcd-product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
    margin: auto;
    padding: 20px;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Product Card Demo",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_level",
      "label": "Heading Level",
      "options": [
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "h3"
        }
      ],
      "default": "h1"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "description",
      "default": "We selling our promise to full fill your satisfaction"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    },
    {
      "type": "range",
      "id": "product_limit",
      "label": "Number of Products",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 4
    },
    {
      "type": "select",
      "id": "button_type",
      "label": "Button Type",
      "options": [
        {
          "label": "Add To Cart",
          "value": "add_to_cart"
        },
        {
          "label": "Shop Now",
          "value": "shop_now"
        },
        {
          "label": "Add With Quantity",
          "value": "add_with_quantity"
        }
      ],
      "default": "add_to_cart"
    }
  ],
  "presets": [
    {
      "name": "Product Card Demo"
    }
  ]
}
{% endschema %}
